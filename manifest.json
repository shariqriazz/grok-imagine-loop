{
  "manifest_version": 3,
  "name": "Grok Imagine Loop",
  "version": "1.6.0.12",
  "description": "Automates Grok Imagine to create looped video sequences.",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "downloads",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://assets.grok.com/*",
    "https://imagine-public.x.ai/*",
    "https://assets.grokusercontent.com/*"
  ],
  "action": {
    "default_title": "Open Grok Loop",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://grok.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}